<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/myprofile.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/animsition.min.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

    <!-- FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    
    <!-- Custom JavaScript -->
    <script>
        // JavaScript for Toggle Add Address Form
        function toggleAddAddressForm() {
            var addAddressForm = document.getElementById("addAddressForm");
            addAddressForm.style.display = (addAddressForm.style.display === "none") ? "block" : "none";
        }

        // Function to handle address submission (dummy function for demonstration)
        function submitAddress() {
            var additionalAddress = document.getElementById("additionalAddress").value;
            alert("Adresa adăugată: " + additionalAddress);
            // Add logic here to submit the address to the server
        }
    </script>
</head>
<body>
    <!-- Navbar top -->
    <header id="header" class="header-scroll top-header headrom">
        <nav class="navbar navbar-dark">
            <div class="container">
                <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#mainNavbarCollapse">&#9776;</button>
                <a class="navbar-brand"> <img class="img-rounded" src="/images/logo.png" alt="" width="18%"> </a>
                <div class="collapse navbar-toggleable-md  float-lg-right" id="mainNavbarCollapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"> <a class="nav-link active" href="acasa">Home <span class="sr-only">(current)</span></a> </li>
                        <li class="nav-item"> <a class="nav-link active" href="restaurants">Restaurants <span class="sr-only"></span></a> </li>
                        <li class="nav-item"> <a class="nav-link active" href="myprofile">My Account</a> </li>
                        <li class="nav-item"> 
                            <form id="logoutForm" action="/processLogout" method="post" class="nav-link active">
                                <input type="submit" value="Log out">
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Navbar -->
    <ul>
        <li>
            <a href="#message">
                <span class="icon-count">29</span>
                <i class="fa fa-envelope fa-2x"></i>
            </a>
        </li>
        <li>
            <a href="#notification">
                <span class="icon-count">59</span>
                <i class="fa fa-bell fa-2x"></i>
            </a>
        </li>
        <li>
            <a href="#sign-out">
                <i class="fa fa-sign-out-alt fa-2x"></i>
            </a>
        </li>
    </ul>
    <!-- End -->

    <!-- Sidenav -->
    <div class="sidenav">
        <div class="profile">
            <img src="images/Depositphotos_484354208_S.jpg" alt="" width="100" height="100">
            <div class="name">
                Profilul meu
            </div>
        </div>
        <div class="sidenav-url">
            <div class="url">
                <a href="#profile" class="active">Profile</a>
                <hr align="center">
            </div>
            <div class="url">
                <a href="#add-address" onclick="toggleAddAddressForm()">Adaugă adresă</a>
                <div id="addAddressForm" style="display: none;">
                    <form action="addAddress" method="POST" class="addAddress-form" id="addAddress">
                        <input type="text" id="additionalAddress" name="additionalAddress" placeholder="Introdu adresa...">
                        <button type="submit">Adaugă</button>
                    </form>
                </div>
                </div>
                <hr align="center">
            </div>
            <div class="url">
                <a href="your-orders" class="active">Istoric comenzi</a> 
                <hr align="center">
            </div>
        </div>
    </div>
    <!-- End -->

    <!-- Main -->
    <div class="main">
        <h2>Identitate</h2>
        <div class="card">
            <div class="card-body">
                <i class="fa fa-pen fa-xs edit"></i>
                <table>
                    <tbody>
                        <tr>
                            <td>Nume</td>
                            <td>:</td>
                            <td><%= userDetails.userDetails.lastName %></td>
                        </tr>
                        <tr>
                            <td>Prenume</td>
                            <td>:</td>
                            <td><%= userDetails.userDetails.firstName %></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td><%= userDetails.email %></td>
                        </tr>
                        <tr>
                            <td>Adresa principala</td>
                            <td>:</td>
                            <td><%= userDetails.userDetails.address %></td>
                        </tr>
                        <tr>
                            <td>Adrese suplimentare</td>
                            <td>:</td>
                            <td><%= userDetails.userDetails.additionalAddresses %></td>
                        </tr>
                        <tr>
                            <td>Numar telefon</td>
                            <td>:</td>
                            <td><%= userDetails.userDetails.phoneNumber %></td>
                        </tr>
                        <tr>
                            <td>Zi de nastere</td>
                            <td>:</td>
                            <td><%= userDetails.userDetails.dateOfBirth %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>  
    </div>
    <!-- End -->
</body>
</html>
